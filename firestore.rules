
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access for products and ingredients, as they are displayed on public pages.
    // Disallow write access for everyone except authenticated users (defined in specific rules below).
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Further restricted in product-specific rules
    }
    match /ingredients/{ingredientId} {
      allow read: if true;
      allow write: if false; // Ingredients are managed manually in the console for now
    }

    // Allow users to read their own data and cart.
    // Sellers can't read buyers' carts.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;

      match /cart/{cartId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Rules for product subcollections like reviews.
    match /products/{productId}/reviews/{reviewId} {
        // Anyone can read reviews.
        allow read: if true;
        // Only authenticated buyers can create reviews.
        allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'buyer';
        // Users cannot update or delete reviews.
        allow update, delete: if false;
    }
    
    // Orders can be read by the buyer who made them or by any seller.
    match /orders/{orderId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'seller');
      // Only buyers can create orders.
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'buyer';
      // Only sellers can update orders (e.g., change status).
      allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'seller';
    }

    // Messages can be read by the buyer involved or any seller.
    // Messages can be created by either the buyer or a seller.
    match /messages/{messageId} {
       allow read, create: if request.auth != null && (resource.data.buyerId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'seller');
       // Only sellers can update messages (e.g., to mark as read, though client logic restricts this further)
       allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.type == 'seller';
    }
  }
}
